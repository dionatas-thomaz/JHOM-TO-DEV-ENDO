#include <stdio.h>
#include <stdlib.h>

float valorapagar(float valor, float desc)
{
    char op;
    printf("escolha a forma de pagamento:\n[1]A vista em dinheiro ou cheque\n[2]A vista no cartao de debito\n[3]A vista no cartao de credito\n[4]dividir em duas vezes sem juros\n[5]Em quatro vezes\n");
    scanf("%s", &op);

    switch (op)
    {
    case '1':
        desc = valor * 0.1;
        valor -= desc;
        break;
    case '2':
        desc = valor * 0.075;
        valor -= desc;
        break;
    case '3':
        desc = valor * 0.05;
        valor -= desc;
        break;
    case '4':
        valor=valor;
        break;
    case '5':
        desc = valor * 0.95;
        valor += desc;
        break;
    default:
        printf("opcao invalida");
        break;
    }

    return valor;
}

int main()
{

    float valor, desc;

    printf("valor a da compra: ");
    scanf("%f", &valor);

    valor = valorapagar(valor, desc);

    printf("o valor a ser pago sera: %.2f", valor);

    return 0;
}